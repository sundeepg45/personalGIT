<apex:page standardController="SFDC_Channel_Account_Plan__c" extensions="BusinessPlan_ConfirmNewVersion">
    <apex:sectionHeader title="{!$ObjectType.SFDC_Channel_Account_Plan__c.Label}" subtitle="{!$Label.BusinessPlan_ConfirmNewVersionTitle}" />
    <apex:variable var="continuable" value="{!OR(SFDC_Channel_Account_Plan__c.Approval_Status__c == 'Approved',SFDC_Channel_Account_Plan__c.Approval_Status__c == 'Draft',SFDC_Channel_Account_Plan__c.Approval_Status__c == 'Rejected')}" />

    <apex:form >
        <apex:pageBlock title="{!$Label.BusinessPlan_ConfirmNewVersionTitle}">
            <apex:pageBlockButtons location="top">
                <apex:commandButton value="Cancel" action="{!cancelUpdate}" />
                <apex:commandButton value="Yes, Continue" action="{!confirmUpdate}" disabled="{!NOT(continuable)}" />
            </apex:pageBlockButtons>

            <apex:pageBlockSection columns="1" rendered="{!continuable}"> 
                <apex:outputText >{!$Label.BusinessPlan_ConfirmNewVersionWillBeCreated}</apex:outputText>
            </apex:pageBlockSection>
            
            <apex:pageBlockSection columns="1" rendered="{!NOT(continuable)}">
                <apex:pageMessage severity="error" strength="3" summary="{!$Label.BusinessPlan_ErrorCannotCreateNewVersionWhenInApproval}">
                    <apex:outputText value="{!$ObjectType.SFDC_Channel_Account_Plan__c.Fields.Approval_Status__c.Label}" style="font-weight: bold; padding-left: 1.0em;" />
                    <apex:outputText value=": " />
                    <apex:outputField value="{!SFDC_Channel_Account_Plan__c.Approval_Status__c}" />
                </apex:pageMessage>
            </apex:pageBlockSection>
        </apex:pageBlock>
    </apex:form>
</apex:page>