    <apex:stylesheet value="{!$Resource.Common_EmbeddedPageStylesheet}"/>
    
    <style>
        .bPageBlock .detailList .dataCol {
            width:19%;
            text-align:right;
            float:left;
        }
        .bPageBlock .detailList .labelCol {
            width: 19% !important;
            text-align:right;
            float:left;
        }
        .bPageBlock .detailList .first
        {
